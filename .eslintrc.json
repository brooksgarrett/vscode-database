{
	"parser": "@typescript-eslint/parser",
	"env": {
		"node": true,
		"es6": true
	},
	"extends": [ "eslint:recommended" ],
	"rules": {
		"indent": [ "error", 4 ],
		"linebreak-style": [ 0 ],
		"quotes": [ "error", "single" ],
		"semi": [ "error", "always" ],
		"eol-last": [ "error", "always" ]
	}
}